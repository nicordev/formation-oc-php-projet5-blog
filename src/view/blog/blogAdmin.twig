{% extends "layout.twig" %}

{# head #}
{% block head %}
    {{ parent() }}
    <link href="/css/admin-style.css" rel="stylesheet" />
{% endblock %}

{% block title %}
    Administration
{% endblock %}


{% block navigation %}
    <nav class="navbar navbar-expand-lg navbar-light fixed-top" id="mainNav">
        <div class="container">
            <a class="navbar-brand" href="/home">ðŸšª Quitter</a>
            <button class="navbar-toggler navbar-toggler-right" type="button" data-toggle="collapse" data-target="#navbarResponsive" aria-controls="navbarResponsive" aria-expanded="false" aria-label="Toggle navigation">
                Menu
                <i class="fas fa-bars"></i>
            </button>
            <div class="collapse navbar-collapse" id="navbarResponsive">
                <ul class="navbar-nav ml-auto">
                    <li class="nav-item">
                        <a class="nav-link" href="/admin">Administration du blog</a>
                    </li>
                    {% block navigationItems %}{% endblock %}
                </ul>
            </div>
        </div>
    </nav>
{% endblock %}

{% block header %}
    <header class="admin-header text-center">
        <h1>Administration du blog</h1>
    </header>
{% endblock %}

{% block content %}
    <section id="blog-admin">

        {% include "blog/message.twig" %}

        {# Posts#}
        <div class="admin-box w100">
            <h2>Articles</h2>

            <p>
                <a class="btn" href="/admin/post-editor">Ajouter un article</a>
            </p>

            <table>
                <thead>
                    <tr>
                        <th>Titre</th>
                        <th>Auteur</th>
                        <th>Etiquettes</th>
                        <th>Commentaires</th>
                        <th>Date de crÃ©ation</th>
                    </tr>
                </thead>

                <tbody>
                {% for post in posts %}
                    <tr>
                        <td>
                            <form action="/admin/post-editor" method="post">
                                <input type="hidden" name="post-id" value="{{ post.getId }}">
                                <input class="admin-link" type="submit" value="{{ post.getTitle }}">
                            </form>
                        </td>
                        <td>
                            coming soon...
                        </td>
                        <td>
                            {% set postTags = post.getTags() %}
                            {% if postTags %}
                                {% for tag in postTags %}
                                    {{ tag.getName() }}
                                {% endfor %}
                            {% else %}
                                -
                            {% endif %}
                        </td>
                        <td>
                            coming soon...
                        </td>
                        <td>
                            {{ post.getCreationDate }}
                        </td>
                    </tr>
                {% endfor %}
                </tbody>

                <tfoot>
                    <tr>
                        <th>Titre</th>
                        <th>Auteur</th>
                        <th>Etiquettes</th>
                        <th>Commentaires</th>
                        <th>Date de crÃ©ation</th>
                    </tr>
                </tfoot>
            </table>
        </div>

        {# Categories #}
        <div class="admin-box">
            <h2>CatÃ©gories</h2>

            {# Add a category button #}
            <p>
                <a class="btn" href="/admin/category-editor">Ajouter une catÃ©gorie</a>
            </p>

            <table>
                <thead>
                    <tr>
                        <th>CatÃ©gorie</th>
                        <th>Etiquettes associÃ©es</th>
                    </tr>
                </thead>

                <tbody>
                {% for category in categories %}
                    <tr>
                        <td>
                            <form action="/admin/category-editor" method="post">
                                <input type="hidden" name="category-id" value="{{ category.getId() }}">
                                <input class="available-category admin-link" type="submit" value="{{ category.getName() }}">
                            </form>
                        </td>
                        <td>
                            {% set categoryTags = category.getTags() %}
                            {% if categoryTags %}
                                {% for tag in categoryTags %}
                                    {{ tag.getName }}
                                {% endfor %}
                            {% else %}
                                -
                            {% endif %}
                        </td>
                    </tr>
                {% endfor %}
                </tbody>
            </table>
        </div>

        {# Tags #}
        <div class="admin-box">
            <h2>Etiquettes</h2>

            <form id="admin-tag-list-form" action="/blog-admin" method="post">

                <input id="update-tag-list-btn" class="btn" type="submit" value="Mettre Ã  jour la liste des Ã©tiquettes">

                <input type="hidden" name="action" value="update-tag-list">

                <ul id="tag-list">
                    {% for tag in tags %}
                        <li>
                            <input type="hidden" name="tag_ids[]" value="{{ tag.getId() }}">
                            <input class="available-tag text-center admin-link" type="text" name="tag_names[]" value="{{ tag.getName() }}" onkeyup="myApp.refreshValue(event); highlightIncorrectTags();">
                            <span class="btn sign-btn" onclick="myApp.eraseTool.eraseElementFromEvent(event)">ðŸ—‘</span>
                        </li>
                    {% endfor %}

                    <li id="new-tag-input-li">
                        <input id="new-tag-input" type="text" name="new-tag-input" placeholder="Nouvelle Ã©tiquette">
                        <button type="button" id="new-tag-btn" class="btn sign-btn">+</button>
                    </li>
                </ul>
            </form>
        </div>
    </section>
{% endblock %}

{% block footer %}
    {% include "blog/adminFooter.twig" %}
{% endblock %}

{% block scripts %}
    {{ parent() }}
    <script src="/js/blogAdmin.js"></script>
{% endblock %}